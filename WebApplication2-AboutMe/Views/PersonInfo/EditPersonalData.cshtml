<body>
	<div class="container">
		<div class="row mt-5">
			<div class="col-md-4">
				<div class="card">
					<div class="card-header">
						<h1 class="card-title">New skill</h1>
					</div>
					<div class="card-body">
						<form method="post" enctype="multipart/form-data">

							@* <div class ="mb-3">
								<input type="file" id="avatar" name="avatar" accept="image/png, image/jpeg" />
							</div> *@

							<div class="mb-3">
								@Html.LabelFor(m => m.FirstName, new {@class = "form-label"})
								@Html.TextBoxFor(m => m.FirstName, new {@class = "form-control", placeholder = "Your First Name..."})
								@Html.ValidationMessageFor(m => m.FirstName)
							</div>

							<div class="mb-3">
								@Html.LabelFor(m => m.LastName, new {@class = "form-label"})
								@Html.TextBoxFor(m => m.LastName, new {@class = "form-control", placeholder = "Your Last Name..."})
								@Html.ValidationMessageFor(m => m.LastName)
							</div>

							<div class="mb-3">
								@Html.LabelFor(m => m.Age, new {@class = "form-label"})
								@Html.TextBoxFor(m => m.Age, new {@class = "form-control", placeholder = "Skill level...", type="number", min = 1, step=1, max=200})
								@Html.ValidationMessageFor(m => m.Age)
							</div>

							<button type="submit" class="btn btn-success">Save</button>
							<a href="/PersonInfo/Index" class="btn btn-outline-info">Return</a>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>


