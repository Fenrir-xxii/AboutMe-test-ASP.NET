@using WebApplication2_AboutMe.Models;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_Layout";
    ViewData["Title"] = Model.FirstName +  Model.LastName + " List of Skills";

}
@model PersonInfo

@section Styles{
    <style>
        .card {
            align-items: center;
            text-align: center;
            border: 2px solid black;
            margin: 5px;
            align-self: baseline;
        }

        .d-flex {
            align-items: center;
        }

        td {
            vertical-align: middle;
        }
    </style>
}
   

    <div class="container">
        <div class="row-mt-5">
            <div class="col-md-6 d-flex flex-column">
                <div class="card" style="width: 70rem;">
                    @if (Model.Image != null)
                    {
                        <img class="img-thumbnail" src="@Model.ImageUrl" width="200px">
                    }
                    <div class="card-body">
                        <h3 class="card-title">@Model.FirstName @Model.LastName</h3>
                        <h5 class="card-text">@Model.Age years old</h5>
                        <a class="btn btn-outline-success" href="/PersonInfo/EditPersonalData">Edit personal data</a>
                        <a class="btn btn-outline-primary mt-5 mb-5" href="/PersonInfo/AddSkill">Add Skill</a>
                        <a class="btn btn-outline-info mt-5 mb-5" href="/AboutMe/AboutMe">Return</a>
                     
                        <div>
                            <table class="table table-hover table-bordered">
                                <thead>
                                    <tr>
                                        <th>Logo</th>
                                        <th>Title</th>
                                        <th>Level</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var skill in Model.Skills)
                                    {
                                        <tr>
                                            <td>
                                                @if (skill.Image != null)
                                                {
                                                    <img class="img-thumbnail" src="@skill.ImageUrl" width="50px">
                                                }
                                            </td>
                                            <td>@skill.Title</td>
                                            <td>
                                                <div>
                                                    <progress value="@skill.Level" max="100"></progress>
                                                    @skill.Level
                                                </div>
                                            </td>
                                            <td>
                                                <div class="d-flex">
                                                    <a class="btn btn-outline-primary" href="/PersonInfo/EditSkill/@skill.Id">Edit</a>&nbsp;
                                                    <form method="post" action="/PersonInfo/DeleteSkill/@skill.Id">
                                                        <button class="btn btn-outline-warning">Delete</button>
                                                    </form>
                                                </div>

                                            </td>
                                        </tr>
                                    }
        
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
                <div>
                   
                </div>
            </div>
        </div>
    </div>