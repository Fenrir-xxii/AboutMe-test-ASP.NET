@{
}
@model Skill;

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title>Edit Skill</title>
	<link href="/libraries/bootstrap/bootstrap-5.0.2-dist/css/bootstrap.css" rel="stylesheet" />
	<style>

	</style>
</head>
<body>
	<div class="container">
		<div class="row mt-5">
			<div class="col-md-4">
				<div class="card">
					<div class="card-header">
						<h1 class="card-title">Edit skill</h1>
					</div>
					<div class="card-body">
						<form method="post" enctype="multipart/form-data">

							<div class="mb-3">
								<img src="@Model.LogoPath" width="200px"/>
							</div>

							<div class="mb-3">
								@Html.LabelFor(m => m.Title, new {@class = "form-label"})
								@Html.TextBoxFor(m => m.Title, new {@class = "form-control", placeholder = "Skill title..."})
								@Html.ValidationMessageFor(m => m.Title)
							</div>

							<div class="mb-3">
								@Html.LabelFor(m => m.Level, new {@class = "form-label"})
								@Html.TextBoxFor(m => m.Level, new {@class = "form-control", placeholder = "Skill level...", type="number", min = 0, step=1, max=100})
								@Html.ValidationMessageFor(m => m.Level)
							</div>

							<button type="submit" class="btn btn-success">Save</button>
							<a href="/PersonInfo/Index" class="btn btn-outline-info">Return</a>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>


	<script src="/bootstrap5/bootstrap-5.0.2-dist/js/bootstrap.bundle.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
	<script src="js/countries.js"></script>


</body>
</html>
