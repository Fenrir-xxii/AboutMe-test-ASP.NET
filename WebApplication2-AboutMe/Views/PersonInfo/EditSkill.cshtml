@{
	Layout = "_Layout";
	ViewData["Title"] = "Editing " + Model.Title + " Skill";
}
@model Skill;
@section Styles{
	<style>
		.card-title{
			color: red;
		}
	</style>
}


	<div class="container">
		<div class="row mt-5">
			<div class="col-md-4">
				<div class="card">
					<div class="card-header">
						<h1 class="card-title">Edit skill</h1>
					</div>
					<div class="card-body">
						<form method="post" enctype="multipart/form-data">

							<div class="mb-3">
								@Html.LabelFor(m => m.Title, new {@class = "form-label"})
								@Html.TextBoxFor(m => m.Title, new {@class = "form-control", placeholder = "Skill title..."})
								@Html.ValidationMessageFor(m => m.Title)
							</div>

							<div class="mb-3">
								@Html.LabelFor(m => m.Level, new {@class = "form-label"})
								@Html.TextBoxFor(m => m.Level, new {@class = "form-control", placeholder = "Skill level...", type="number", min = 0, step=1, max=100})
								@Html.ValidationMessageFor(m => m.Level)
							</div>

							<div class="mb-3">
								@Html.LabelFor(m => m.Image, new {@class = "form-label"})
								@Html.TextBoxFor(m => m.Image, new {@class = "form-control", placeholder = "Pick image...", type="file", accept=".jpg,.png"})
								@Html.ValidationMessageFor(m => m.Image)
							</div>

							<button type="submit" class="btn btn-success">Save</button>
							<a href="/PersonInfo/Index" class="btn btn-outline-info">Return</a>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>

