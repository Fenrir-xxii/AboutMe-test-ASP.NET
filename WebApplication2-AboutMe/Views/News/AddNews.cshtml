@{
	Layout = "_Layout";
	ViewData["Title"] = "Add News";
}
@model NewsItem;

<div class="container">
	<div class="row mt-5">
		<div class="col-md-4">
			<div class="card">
				<div class="card-header">
					<h1 class="card-title">Add news</h1>
				</div>
				<div class="card-body">
					<form method="post" enctype="multipart/form-data">

						<div class="mb-3">
							@Html.LabelFor(m => m.Title, new {@class = "form-label"})
							@Html.TextBoxFor(m => m.Title, new {@class = "form-control", placeholder = "News title..."})
							@Html.ValidationMessageFor(m => m.Title)
						</div>

						<div class="mb-3">
							@Html.LabelFor(m => m.CreatedAt, new {@class = "form-label"})
							@Html.TextBoxFor(m => m.CreatedAt, new {@class = "form-control", placeholder = "News date...", type="date"})
							@Html.ValidationMessageFor(m => m.CreatedAt)
						</div>

						<div class="mb-3">
							@Html.LabelFor(m => m.FullDescription, new {@class = "form-label"})
							@* @Html.TextBoxFor(m => m.FullDescription, new {@class = "form-control", placeholder = "News full text..."}) *@
							@Html.TextAreaFor(m => m.FullDescription, new {@class = "form-control", placeholder = "News full text..."})
							@Html.ValidationMessageFor(m => m.FullDescription)
						</div>

						<div class="mb-3">
							@Html.LabelFor(m => m.Image, new {@class = "form-label"})
							@Html.TextBoxFor(m => m.Image, new {@class = "form-control", placeholder = "Pick image...", type="file", accept=".jpg,.png"})
							@Html.ValidationMessageFor(m => m.Image)
						</div>

						<button type="submit" class="btn btn-success">Save</button>
						<a href="/News/Index" class="btn btn-outline-info">Return</a>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
